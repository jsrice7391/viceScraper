
<!-- Modal Structure -->
<div id="modal1" class="modal">
    <div class="modal-content">
        <h4>Add a Note to {{article.title}}</h4>
        <hr>
        <form action="/notes" id="usrform" method="POST">
        <div class="row">
            <div class="input-field col s12">
                <textarea id="textarea1" class="materialize-textarea" name="note"></textarea>
                <label for="textarea1">Textarea</label>
            </div>
        </div>


            <input type="submit">
        </form>

    </div>
    <div class="modal-footer">
        <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Submit</a>
    </div>
</div>



<div class="container">
    <div class="row">
        <div class="col s12 m12">
            <div class="card">
                <div class="card-image">
                    <img src="/public/images/reader.jpg">
          
                    {{!-- This is the button that will trigger the modal. --}}
                    <a class="btn-floating halfway-fab waves-effect waves-light red btn modal-trigger" href="#modal1" data-target="modal">
                        <i class="material-icons">add</i>
                    </a>
                </div>
                <div class="card-content">
                    <a href="http://www.vice.com{{article.link}}"><span class="card-title">{{article.title}}</span></a>
                    <p>{{article.subText}}</p>
                </div>
            </div>
        </div>
    </div>



    
</div>

